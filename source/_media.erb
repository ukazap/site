<% if locals[:caption] %>
  <figure role="img" class="image-wrap">
    <%= image_tag locals[:src], { alt: locals[:alt], title: locals[:title], width: locals[:width] , height: locals[:height] } %>
    <figcaption>
      <p><%= locals[:caption] %></p>
    </figcaption>
  </figure>
<% else %>
  <div class="image-wrap">
    <%= image_tag locals[:src], { alt: locals[:alt], title: locals[:title], width: locals[:width] , height: locals[:height] } %>
  </div>
<% end %>