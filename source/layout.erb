    <title>
      Ukaza Perdana
    </title>

    <%= stylesheet_link_tag :main, media: 'screen' %>
  </head>

  <body>
    <% if false %>
      <header>
        <h1><a href="/">Programming & Lollygagging</a></h1>
        <h2>Ukaza Perdana's Notes</h2>
        <ul>
          <li><a class="button" href="/">Home</a></li>
          <li><a class="button" href="https://www.linkedin.com/in/ukazap">RÃ©sumÃ©</a></li>
          <li><a class="button" href="/about">About</a></li>
          <li><a class="button" href="/subscribe">Subscribe</a></li>
        </ul>
      </header>
    <% end %>
    <div id="main" role="main">
      <% if false && current_article&.title %>
        <p><%= current_article.date.strftime('%Y/%m/%d') %>:</p>
        <h1 class='title'><%= link_to current_article.title, current_article %></h1>
      <% end %>

      <%= yield %>
    </div>

    <% if false %>
    <aside>
      <h2>Recent Articles</h2>
      <ol>
        <% blog.articles[0...10].each do |article| %>
          <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
        <% end %>
      </ol>

      <h2>Tags</h2>
      <ol>
        <% blog.tags.each do |tag, articles| %>
          <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
        <% end %>
      </ol>

      <h2>By Year</h2>
      <ol>
        <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
          <li><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
        <% end %>
      </ol>
    </aside>
    <% end %>

    <% if false %>
      <footer>
