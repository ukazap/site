@import url('https://fonts.googleapis.com/css?family=Fira+Code|Lexend Zetta|Noto+Sans&display=swap');

$text-color: #a9a9b3;
$brightest-green: #00ffbf;
$blueish-green: #aaffea;
$green-box-shadow: 6px 6px 0px 0px #008080;

body {
  color: $text-color;

  background-color: #343d46;

  margin: 15px;

  @media (min-width: 850px) {
    width: 850px;
    margin: 40px auto;
  }

  font-family: 'Noto Sans', sans-serif;
  font-display: swap;

  header {
    text-align: center;
    margin: 0 auto;
    padding-top: 10em;
    padding-left: 15px;

    @media (min-width: 500px) {
      width: 400px;
    }

    color: black;

    box-shadow: $green-box-shadow;

    background-color: $brightest-green;

    padding: 0.5em;

    h1, h2 {
      color: black;
      text-shadow: none;
    }

    h1 {
      font-size: 1.5em;
    }

    h2 {
      font-family: 'Noto Sans', sans-serif;
      font-size: 1em;
      font-weight: normal;
    }

    ul {
      padding: 0;
      list-style: none;
      margin: 1em 0 0.5em 0;

      li {
        display: inline-block;

        @media (max-width: 420px) {
          display: block;
          padding-top: 0.5em;
        }
      }
    }

    a { color: black; }
  }

  #main {
    padding: 1em;
    background-color: #3a4551;
  }

  footer {
    text-align: center;
  }
}

a {
  color: $brightest-green;
  display: inline-block;
  text-decoration: none;
  &:hover {
    text-shadow: #fff 1px 0 10px;
  }
}

h1, h2, h3, h4, h5, h6 {
  font-family: 'Lexend Zetta', sans-serif;
  color: white;
  text-shadow: 3px 4px 0px #008080;
}

.title {
  font-size: 2.25em;
}

q {
  font-style: italic;
}

blockquote {
  font-style: italic;
  border-left: 5px solid #23292f;
  margin-left: 0em;
  padding-left: 1em;
}

code {
  font-family: 'Fira Code', monospace;
  font-size: 0.9em;
}

:not(.highlight) > code {
  background-color: #3e4852;
}

div.highlight {
  padding-left: 1em;
  box-shadow: $green-box-shadow;
}

<%= Rouge::Themes::Base16::Monokai.render(:scope => '.highlight') %>

figure {
  margin-left: 0px;
  background-color: #fffff0;
  display: inline-block;
  padding: 5px;
  box-shadow: $green-box-shadow;

  text-align: center;

  figcaption {
    color: black;
    font-size: 0.9em;
    font-family: 'Noto Sans', sans-serif;
    margin: 0px;
  }
}

img {
  max-width: 100%;
}

.button {
  color: black;
  text-decoration: none;
  background-color: white;
  border: 2px solid black;
  padding: 0em 0.5em;
  border-radius: 5px;
  box-shadow: 3px 3px 0px 0px #008080;
  cursor: default;
  &:hover {
    background-color: $blueish-green;
  }
  &:active {
    background-color: gray;
  }
}
