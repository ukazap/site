@import url('https://fonts.googleapis.com/css?family=Fira+Code|Lexend Zetta|Noto+Sans&display=swap');

$text-color: #a9a9b3;
$green-box-shadow: 6px 6px 0px 0px #008080;

body {
  color: $text-color;

  background-color: #343d46;

  margin: 15px;

  @media (min-width: 1000px) {
    width: 1000px;
    margin: 40px auto;
  }

  font-family: 'Noto Sans', sans-serif;

  header {
    text-align: center;
    padding-top: 10em;
    padding-left: 15px;

    @media (min-width: 500px) {
      width: 400px;
    }

    color: black;

    box-shadow: $green-box-shadow;

    background-color: #00ffbf;

    border-top: 4px solid #12e1ad;
    border-left: 4px solid #12e1ad;
    border-right: 4px solid #06bb8d;
    border-bottom: 4px solid #06bb8d;
    padding: 0.5em;

    h1, h2 {
      color: black;
    }

    h1 {
      font-size: 1.5em;
    }

    h2 {
      font-family: 'Noto Sans', sans-serif;
      font-size: 1em;
      font-weight: normal;
    }

    ul {
      padding: 0;
      list-style: none;
      margin: 1em 0 0.5em 0;

      li {
        display: inline-block;

        @media (max-width: 420px) {
          display: block;
          padding-top: 0.5em;
        }
      }
    }

    a { color: black; }
  }
}

a {
  color: #00ffbf;
  display: inline-block;
  text-decoration: none;
  &:hover {
    text-shadow: #fff 1px 0 10px;
  }
}

h1, h2, h3, h4, h5, h6 {
  font-family: 'Lexend Zetta', sans-serif;
  color: white;
}

.title {
  font-size: 2.25em;
}

blockquote {
  font-style: italic;
}

code {
  font-family: 'Fira Code', monospace;
  font-size: 0.9em;
}

:not(.highlight) > code {
  background-color: #3e4852;
}

div.highlight {
  padding-left: 1em;
  box-shadow: $green-box-shadow;
}

<%= Rouge::Themes::Base16::Monokai.render(:scope => '.highlight') %>

.image-wrap {
  margin-left: 0px;

  img {
    max-width: 90vw;
    box-shadow: $green-box-shadow;
  }
}

.button {
  color: black;
  text-decoration: none;
  background-color: white;
  border: 2px solid black;
  padding: 0em 0.5em;
  border-radius: 5px;
  box-shadow: 3px 3px 0px 0px #008080;
  cursor: default;
  &:hover {
    background-color: #aaffea;
  }
  &:active {
    background-color: gray;
  }
}